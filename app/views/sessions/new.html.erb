<div class="background3 lighten">
  <div class="forms-container container pad-below">
    <h2>Login</h2>

    <%= render :partial => "./errors"%>

    <%= form_tag sessions_path, class: "form-horizontal" do  %>
      <div class="form-group">
        <%= label_tag "Email", nil,  class: "col-sm-2 control-label"%>
        <div class="col-sm-3">
          <%= text_field_tag "email", nil,  class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag "Password" , nil,  class: "col-sm-2 control-label"%>
        <div class="col-sm-3">
          <%= password_field_tag "password", nil,  class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-3">
          <%= submit_tag "Login", class: "btn btn-default"  %>
        </div>
      </div>

    <%end%>
  </div>
</div>
