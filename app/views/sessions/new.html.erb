                      <%= text_field_tag "email", nil,  class: "form-control", placeholder: "Email.."%>

                    </div>
                    <div class="form-group">
                          <%= password_field_tag "password", nil,  class: "form-control",  placeholder: "Password.."%>
                    </div>
                    <div class=" text-right">
                      <%= submit_tag "Login", class: "btn theme-btn-color"  %>
                    </div>
                    <%end%>
                    <hr>
                    <div class="form-btm-link text-center">
                        <a href="#">Lost password?</a><span>Or</span><a href="signup.html">Create new account</a>
                    </div>
